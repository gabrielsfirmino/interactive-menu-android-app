<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFC1C1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabrielsfirmino.interactive_menu_android_app.MainActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        app:srcCompat="@drawable/ic_menu"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btscan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="#FF6A6A"
        android:text="@string/button_scan"
        android:textColor="#FFFFFF"
        android:onClick="goToScan"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:background="#FF6A6A"
        android:text="@string/button_list"
        android:textColor="#FFFFFF"
        android:onClick="goToMenus"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdgroup_1">

        <RadioButton
            android:id="@+id/rdgroupptbr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:enabled="false"
            android:text="@string/rdbutton_pt"
            android:textColor="#FF6A6A"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdgroupus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:text="@string/rdbutton_us"
            android:textColor="#FF6A6A"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RadioGroup>

</LinearLayout>
